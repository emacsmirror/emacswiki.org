    (defmath note100 (n)             ;fonction pour attribuer 
    (setq seuil '(80 73 66 59 50 0)) ;une note polonaise à partir
    (setq note '(5 4.5 4 3.5 3 2))   ;d’un barème de 100 points
    (while (< n (car seuil))
      (pop note)
      (pop seuil))
    (car note))
